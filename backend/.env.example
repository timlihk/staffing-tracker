DATABASE_URL="postgresql://user:password@localhost:5432/staffing_tracker?schema=public"

# JWT Configuration (REQUIRED)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-separate-refresh-secret-MUST-BE-DIFFERENT-from-JWT_SECRET"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
PASSWORD_RESET_EXPIRES_IN="30m"

NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:5173"

# Email Configuration (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
EMAIL_FROM="notifications@asia-cm.team"

# Email Reminders (Daily Partner Reminders)
ENABLE_PROJECT_REMINDERS=false
EMAIL_TEST_MODE=false
EMAIL_TEST_RECIPIENT="admin@example.com"
LOG_EMAIL_PAYLOADS=false

# Optional AI provider for milestone analysis (DeepSeek/OpenAI-compatible)
AI_API_KEY=""
AI_BASE_URL="https://api.deepseek.com"
AI_MODEL="deepseek-chat"

# Date-based milestone sweep (deterministic)
ENABLE_BILLING_DATE_SWEEP=false
RUN_BILLING_DATE_SWEEP_ON_START=false
BILLING_DATE_SWEEP_CRON="0 2 * * *"
BILLING_DATE_SWEEP_TIMEZONE="Asia/Hong_Kong"
BILLING_DATE_SWEEP_LIMIT=2000

# AI milestone sweep (ambiguous trigger text)
ENABLE_BILLING_AI_SWEEP=false
RUN_BILLING_AI_SWEEP_ON_START=false
BILLING_AI_SWEEP_CRON="30 2 * * *"
BILLING_AI_SWEEP_TIMEZONE="Asia/Hong_Kong"
BILLING_AI_SWEEP_LIMIT=300
BILLING_AI_SWEEP_BATCH_SIZE=20
BILLING_AI_SWEEP_MIN_CONFIDENCE=0.75
BILLING_AI_SWEEP_AUTO_CONFIRM_CONFIDENCE=0.92
